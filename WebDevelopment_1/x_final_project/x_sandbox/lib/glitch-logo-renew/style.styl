@import url('https://fonts.googleapis.com/css?family=Lato:400,700')
@import 'animation.css'

$bg-color = #111
$txt-color = #fff
$color-c1 = red
$color-c2 = blue
$offset-c1 = 3
$offset-c2 = 2
$lay-c1 = 2
$lay-c2 = 2

// reset
*, *:before, *:after
  margin: 0
  padding: 0
  border: 0
  outline: 0
  box-sizing: border-box
  user-select: none

.container
  width: 100vw
  height: 100vh
  font-family: 'Lato', sans-serif
  font-weight: 700
  background: $bg-color
  color: $txt-color

